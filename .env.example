APP_NAME=HA Entity Vault
SESSION_SECRET=change-me-in-production
SESSION_HTTPS_ONLY=false
HEV_DATA_DIR=./data
DATABASE_URL=

# Optional token override. If set, this value is preferred over token stored in SQLite
# for profiles that use token_env_var=HA_TOKEN.
HA_TOKEN=

# Optional per-profile override by environment variable name.
# Example profile token_env_var value: HA_LAB_TOKEN
HA_LAB_TOKEN=

# Optional LLM settings for suggestion/draft generation.
HEV_LLM_ENABLED=false
HEV_LLM_BASE_URL=
HEV_LLM_API_KEY=
HEV_LLM_MODEL=
HEV_LLM_TIMEOUT_SECONDS=20
HEV_LLM_MAX_CONCURRENCY=4

# Optional build SHA override used by /config update checker when .git is unavailable.
HEV_BUILD_COMMIT_SHA=

# Optional API key env vars referenced by profile-scoped LLM connections.
# The app stores only env var names for LLM credentials.
OPENAI_API_KEY=
OPENROUTER_API_KEY=
LM_STUDIO_API_KEY=

# Max entities evaluated per draft run.
HEV_AUTOMATION_DRAFT_MAX_ITEMS=50
